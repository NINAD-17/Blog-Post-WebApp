<%- include('partials/header'); -%> 


<h1>Compose</h1>
<form action="/compose" method="post" class="form-floating">
    <div class="form-group">
        <label for="blogTitle">Title</label>
        <input class="form-control" type="text" name="blogTitle" placeholder="Enter blog title">
        <br>
        <label for="blogPost">Post</label>
        <textarea name="blogPost" class="form-control" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>


<%- include('partials/footer'); -%> 